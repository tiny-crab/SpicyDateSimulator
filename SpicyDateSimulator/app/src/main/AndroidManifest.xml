<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kch.spicydatesimulator">
    <uses-permission android:name="android.permission.INTERNET" />
// App Icon used with FlatIcon Free License (Free usage with attribution) from Pixel Buddha at Flaticon.com
    <application
        android:allowBackup="true"
        android:icon="@mipmap/heart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MessagingActivity"
            android:screenOrientation="portrait"/>
        <service android:name=".MediaService"/>
    </application>

</manifest>